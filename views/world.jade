		script
			function starter(){
				var hash = "#{auth_hash}";
				var user_id = "#{ user.id }"
				// console.log(hash, login)
				var W = World.init(hash, user_id);
				document.getElementById("make-main").onclick = function() {
					W.make_main()
				};
				document.getElementById("add-icon").onclick = function() {
					W.add_icon()
				};
			}
		
	body(onload="starter()")
