		script
			function starter(){
				var hash = "#{auth_hash}";
				var login = "#{ user.username }"
				// console.log(hash, login)
				var W = World.init(hash, login);
				document.getElementById("make-main").onclick = function() {
					W.make_main()
				};
				document.getElementById("add-icon").onclick = function() {
					W.add_icon()
				};
			}
		
	body(onload="starter()")
